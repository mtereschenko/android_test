<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.edell.test2.Strobe"
    tools:showIn="@layout/activity_strobe">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/parrot"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/start_strobe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="START STROBE"
            android:background="#444"/>
        <TextView
            android:id="@+id/lag_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="24sp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="90"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:textColor="#ccc"
            app:layout_constraintHorizontal_bias="0.501"/>
        <android.support.v7.widget.AppCompatSeekBar
            android:layout_marginTop="8dp"
            android:id="@+id/set_lag"
            android:max="100"
            android:progress="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/lag_text_view"/>
        <TextView
            android:id="@+id/interval_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="24sp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="90"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:textColor="#ccc"
            app:layout_constraintHorizontal_bias="0.501"/>
        <android.support.v7.widget.AppCompatSeekBar
            android:layout_marginTop="8dp"
            android:id="@+id/set_interval"
            android:max="500"
            android:progress="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/interval_text_view"/>

    </android.support.v7.widget.LinearLayoutCompat>
</android.support.constraint.ConstraintLayout>
